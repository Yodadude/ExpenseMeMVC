@{
    ViewBag.Title = "Logon";
}

<div class="row">
    <form class="form-horizontal" role="form" action="logon"  method="post">
        <div class="well">
            <div class="form-group">
                <label class="control-label col-sm-4">User Id</label>
                <div class="col-sm-4">
                    <input autofocus class="form-control" name="UserId" value="SJACK" />
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Password</label>
                <div class="col-sm-4">
                    <input class="form-control" name="Password" />
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div class="">
                <span class="col-sm-4"></span>
                <span class="col-sm-4">
                    <input type="submit" class="btn btn-primary btn-block" value="Logon" />
                </span>
                <span class="col-sm-4"></span>
            </div>
            <br class="clearfix" />
        </div>
    </form>
</div>
